<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>SleepWell</Title>
    <Authors>LennartCode</Authors>
    <Description>Applauds the user three times, three minutes, one minute and directly before the shutdown of the machine.</Description>
    <ApplicationIcon>moon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="moon.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Windows.Extensions" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Applause.wav">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
